<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/homeIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_home"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editIm"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkgrey" />

    <ImageView
        android:id="@+id/editIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_edit"
        app:layout_constraintLeft_toRightOf="@+id/homeIm"
        app:layout_constraintRight_toLeftOf="@+id/moreIm"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkgrey" />

    <ImageView
        android:id="@+id/moreIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_more"
        app:layout_constraintLeft_toRightOf="@+id/editIm"
        app:layout_constraintRight_toLeftOf="@+id/notiIm"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkgrey" />

    <ImageView
        android:id="@+id/notiIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_notification"
        app:layout_constraintLeft_toRightOf="@+id/moreIm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:tint="@color/darkgrey" />
</androidx.constraintlayout.widget.ConstraintLayout>